@page
@model quiz_app.Models.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-4">Index</h1>

    <p>
        <a class="btn btn-primary" asp-page="Create">Create New</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Question[0].Text)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Question)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="./Edit" asp-route-id="@item.QuestionId">Edit</a>
                        <a class="btn btn-sm btn-outline-info" asp-page="./Details" asp-route-id="@item.QuestionId">Details</a>
                        <a class="btn btn-sm btn-outline-danger" asp-page="./Delete" asp-route-id="@item.QuestionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
