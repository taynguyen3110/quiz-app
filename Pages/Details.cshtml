@page
@model quiz_app.Pages.DetailsModel
@{
    ViewData["Title"] = "Question Details";
}

<div class="container">
    <h1 class="mt-4">Question Details</h1>

    <div class="mb-4">
        <h4>Question</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Text
            </dt>
            <dd class="col-sm-10">
                @Model.Question.Text
            </dd>
        </dl>
    </div>

    <div class="mb-4">
        <h4>Answers</h4>
        <hr />
        <ul class="list-group">
            @foreach (var answer in Model.Question.Answers)
            {
                <li class="list-group-item @(answer.IsCorrect ? "list-group-item-success font-weight-bold" : "")">
                    @answer.Text
                </li>
            }
        </ul>
    </div>

    <div>
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </div>
</div>
