@page
@model quiz_app.Pages.CreateModel
@{
    ViewData["Title"] = "Create Question";
}

<div class="container">
    <h1 class="mt-4">Create Question</h1>

    <h4>Question</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Question.Text" class="form-label"></label>
                    <input asp-for="Question.Text" class="form-control" />
                    <span asp-validation-for="Question.Text" class="text-danger"></span>
                </div>

                <h4>Answers</h4>
                @for (int i = 0; i < Model.Answers.Count; i++)
                {
                    <div class="mb-3">
                        <label asp-for="Answers[i].Text" class="form-label">Answer @i</label>
                        <input asp-for="Answers[i].Text" class="form-control" />
                        <span asp-validation-for="Answers[i].Text" class="text-danger"></span>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="CorrectAnswerIndex" class="form-label">Correct Answer Index</label>
                    <input asp-for="CorrectAnswerIndex" class="form-control" />
                    <span asp-validation-for="CorrectAnswerIndex" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
