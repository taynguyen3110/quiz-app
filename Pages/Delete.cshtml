@page
@model quiz_app.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="mt-4">Delete</h1>

    <h3 class="text-danger">Are you sure you want to delete this?</h3>

    <div class="mb-4">
        <h4>Question</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Question.Text)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Question.Text)
            </dd>
        </dl>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Question.QuestionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary ms-2" asp-page="./Index">Back to List</a>
    </form>
</div>
